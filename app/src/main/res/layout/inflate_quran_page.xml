<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:id="@+id/layout_bookmarkContent"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.indapp.fonts.ArabicTextView
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"
                android:id="@+id/txtBookmarkSurahName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.indapp.fonts.ArabicTextView
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:id="@+id/txtBookmarkParaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/layout_list"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.indapp.fonts.ArabicTextView
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:textColor="#000000"
                    android:id="@+id/txtArabicList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <com.indapp.fonts.UrduTextView
                        android:layout_marginRight="5dp"

                        android:gravity="center"
                        android:textColor="#000000"
                        android:id="@+id/txtUrduList"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.indapp.fonts.GujaratiTextView
                        android:layout_marginRight="5dp"
                        android:gravity="center"

                        android:textColor="#000000"
                        android:id="@+id/txtGujaratiList"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout

                android:id="@+id/layout_grid"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <View
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:background="#000000"
                        android:id="@+id/viewLineVertical"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <com.indapp.fonts.UrduTextView
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/viewLineVertical"
                        android:textColor="#000000"
                        android:id="@+id/txtUrdu"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.indapp.fonts.GujaratiTextView
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/viewLineVertical"
                        android:textColor="#000000"
                        android:id="@+id/txtGujarati"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>
                <com.indapp.fonts.ArabicTextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_weight="0.9"
                    android:textColor="#000000"
                    android:id="@+id/txtArabic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <com.indapp.fonts.GujaratiTextView
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtTafseerGujarati"
                android:padding="10dp"
                android:visibility="gone"

                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/menuitemsize_urdu"
                android:background="@color/colorSurahParaBG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.indapp.fonts.UrduTextView
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/txtTafseerUrdu"
                android:padding="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/menuitemsize_urdu"
                android:background="@color/colorSurahParaBG"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <View

        android:id="@+id/viewLineHorizontal"
        android:layout_marginTop="4dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>