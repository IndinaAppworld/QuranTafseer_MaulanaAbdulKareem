<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/header"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:id="@+id/txtTutotialText"
            android:textColor="#ffffff"
            android:textSize="@dimen/menuitemsize"
            android:text="This is sample text for tutorial "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/header"
        android:id="@+id/activity_main_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </androidx.viewpager.widget.ViewPager>


    <RelativeLayout
        android:id="@+id/layout_footer"
        android:padding="5dp"
        android:background="#99000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.indapp.fonts.UrduTextView
            android:visibility="visible"
            android:id="@+id/txtNumber"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:text="1/2"
            android:textSize="@dimen/menuitemsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.indapp.fonts.UrduTextView
            android:visibility="gone"
            android:id="@+id/txtMainTitleUrdu"
            android:textColor="#ffffff"
            android:text="ٹوٹوریل"
            android:layout_centerInParent="true"
            android:textSize="@dimen/menuitemsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.indapp.fonts.GujaratiTextView
            android:visibility="gone"
            android:id="@+id/txtMainTitleGujarati"
            android:textColor="#ffffff"
            android:text="ટુટોરિયલ"
            android:layout_centerInParent="true"
            android:textSize="@dimen/menuitemsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.indapp.fonts.CipherNormal
            android:visibility="gone"
            android:id="@+id/txtMainTitleEnglish"
            android:textColor="#ffffff"
            android:text="Tutorial"
            android:layout_centerInParent="true"
            android:textSize="@dimen/menuitemsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.indapp.fonts.UrduTextView
            android:visibility="visible"
            android:id="@+id/txtSkip"
            android:textColor="#ffffff"
            android:text="1/2"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/menuitemsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>