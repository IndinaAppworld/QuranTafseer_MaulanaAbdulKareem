<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_duaindex"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imgArrow"
            android:visibility="visible"
            android:tint="@color/duaprimarycolor"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/imgFav"
            android:visibility="visible"
            android:layout_marginRight="5dp"
android:layout_toLeftOf="@id/imgArrow"
            android:src="@drawable/favorite_dua_unesl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <com.indapp.fonts.CipherNormal
            android:gravity="center_vertical|center_horizontal"
            android:text="111"
            android:layout_centerVertical="true"
            android:textColor="@color/duaprimarycolor"
            android:textSize="@dimen/maintitlefont"
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.indapp.fonts.CipherNormal
            android:layout_toLeftOf="@id/imgFav"
            android:layout_toRightOf="@id/txtNumber"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:text="NAMAAZ KI DUAEIN"
            android:id="@+id/txtTitle"
            android:textColor="#176775"
            android:textSize="@dimen/maintitlefont"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>